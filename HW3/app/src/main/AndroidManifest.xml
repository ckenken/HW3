<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ckenken.asus.hw3" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".com.ckenken.asus.main.hw3.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".com.ckenken.asus.main.hw3.OpeningActivity"
            android:label="@string/title_activity_opening"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <activity
            android:name=".com.ckenken.asus.main.hw3.SetAlarmActivity"
            android:label="@string/title_activity_set_alarm"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".com.ckenken.asus.main.hw3.NotificationActivity"
            android:label="@string/title_activity_notification"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".com.ckenken.asus.main.hw3.InputAlarmTimeActivity"
            android:label="@string/title_activity_input_alarm_time"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <service
            android:name=".com.ckenken.asus.main.hw3.AlarmService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <service
            android:name=".com.ckenken.asus.main.hw3.TenMinuteService"
            android:enabled="true"
            android:exported="true" >
        </service>

    </application>

</manifest>
